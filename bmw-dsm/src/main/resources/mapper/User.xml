<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.rulex.dsm.dao.UserDao">
    <insert id="insertUser" parameterType="com.rulex.dsm.pojo.User">
        INSERT INTO bmw_user (username,age) VALUES (#{name},#{age})
    </insert>


    <update id="updateUsername">
        UPDATE bmw_user SET username=#{name},age=#{age} WHERE id=#{idcard}
    </update>

    <delete id="delUser">
        DELETE FROM bmw_user WHERE id=#{idcard}
    </delete>

</mapper>